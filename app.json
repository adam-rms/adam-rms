{
    "name": "AdamRMS",
    "description": "AdamRMS is an advanced Rental Management System for Theatre, AV & Broadcast, written in Typescript. It is available as a hosted solution or to be self-hosted.",
    "website": "https://adam-rms.com",
    "repository": "https://github.com/bstudios/adam-rms",
    "scripts": {
        "postinstall": "npm install --prefix api && npm run build --prefix api",
        "postdeploy": "npm run typeorm:migration:run --prefix api"
    },
    "env": {
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "free"
        }
    },
    "image": "heroku/nodejs",
    "buildpacks": [
        {
            "url": "heroku/nodejs"
        }
    ],
    "addons": [
        {
            "plan": "heroku-postgresql",
            "options": {
            "version": "13.4"
            }
        }
    ],
    "environments": {
      "review": {
        "env": {
          "CONTEXT": "pr-review"
        }
      }
    }
  }