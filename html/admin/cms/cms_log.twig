{% extends "assets/template.twig" %}
{% block htmlIncludes %}

{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">CMS Page Access</h3>
                    <div class="card-tools pull-right">
                        <div class="input-group input-group-sm">
                            <a type="button" class="btn btn-default btn-sm" title="View Page" href="{{ CONFIG.ROOTURL }}/cms/?p={{ cmsPages_id }}"><i class="far fa-eye"></i></a>
                            <a type="button" class="btn btn-default btn-sm" title="Viewing Stats" href="{{ CONFIG.ROOTURL }}/cms/stats.php?p={{ cmsPages_id }}"><i class="far fa-chart-bar"></i></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Time/Date</th>
                                {% if 52|instancePermissions %}
                                <th>User Id</th>
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for entry in VIEWERS %}
                                <tr>
                                    <td>{{ entry.cmsPagesViews_timestamp }}</td>
                                    {% if 52|instancePermissions %}
                                    <td>
                                        {% if entry.users_userid != null %}
                                                <a href="{{ CONFIG.ROOTURL }}/user.php?id={{ entry.users_userid }}">
                                                    {{ entry.user.users_name1 }} {{ entry.user.users_name2 }}
                                                </a>
                                        {% else %}
                                            Public access
                                        {% endif %}
                                    </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}