{% extends "assets/template.twig" %}
{% block htmlIncludes %}

{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">CMS Page Access</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Time/Date</th>
                                <th>User Id</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entry in VIEWERS %}
                                <tr>
                                    <td>{{ entry.cmsPagesViews_timestamp }}</td>
                                    <td>
                                        {% if entry.users_userid != null %}
                                            {% if 52|instancePermissions %}
                                                <a href="{{ CONFIG.ROOTURL }}/user.php?id={{ entry.users_userid }}">
                                                    {{ entry.user.users_name1 }} {{ entry.user.users_name2 }}
                                                </a>
                                            {% else %}
                                                {{ entry.user.users_name1 }} {{ entry.user.users_name2 }}
                                            {% endif %}
                                        {% else %}
                                            Public access
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}