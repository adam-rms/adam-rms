    {% extends "assets/template.twig" %}

    {% block content %}
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-12">
                <div class="alert alert-warning alert-dismissible">
                    <h5><i class="icon fas fa-info"></i> Server-Wide Configuration</h5>
                    You are modifying settings and configuration that affect the whole of the AdamRMS Server, including all businesses (instances) running on it. Please be careful when making changes here.
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-12">
                <div class="card ">
                    <div class="card-header">
                        <h3 class="card-title">
                            Analytics - Tables (Total = {{ total|number_format }})
                        </h3>
                        <div class="card-tools pull-right">
                            
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-head-fixed" border="0" style="overflow-x: scroll;">
                            <thead>
                            <tr>
                                <th>Table Name</th>
                                <th>Number of Rows</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for table in tables %}
                                <tr>
                                    <td>{{ table.name }}</td>
                                    <td>{{ table.count|number_format }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    
                </div>
            </div>
        </div>
    {% endblock %}
