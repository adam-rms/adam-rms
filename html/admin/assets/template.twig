<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({
            html: true,
        });

        function changeTheme(isDark){
            if(isDark){
                $('body').addClass("dark-mode");
                //Trigger the theme change in js so that other plugins can change their theme
                $('#theme-icon').removeClass("fa-moon").addClass("fa-sun");
                $(document).trigger("themeChange", 'dark');
                $('.main-header').removeClass("navbar-white").removeClass("navbar-light").addClass("navbar-dark");
                $(".brand-link img").attr("src","{{ CONFIG.ASSETCDNURL }}/img/logoicon-white.png");
                $('.brand-link').removeClass("navbar-white").addClass("navbar-dark");
                $('.brand-link').css("color","rgba(255,255,255,.8)");
            } else {
                $('body').removeClass("dark-mode");
                //Trigger the theme change in js so that other plugins can change their theme
                $(document).trigger("themeChange", 'light');
                $('#theme-icon').removeClass("fa-sun").addClass("fa-moon");
                $('.main-header').addClass("navbar-white").addClass("navbar-light").removeClass("navbar-dark");
                $(".brand-link img").attr("src","{{ CONFIG.ASSETCDNURL }}/img/logoicon.png");
                $('.brand-link').removeClass("navbar-dark").addClass("navbar-white");
                $('.brand-link').css("color","rgba(0,0,0,.8)");
            }
        }

        $(document).on("click","#toggle-theme", function () {
            const isDark = !$('body').hasClass('dark-mode');
            ajaxcall("account/theme.php", isDark ? {'dark': 1} : {}, function (data) {
                //Change Theme
                changeTheme(isDark);

                //Used to trigger other adamRMS windows to change their theme
                localStorage.setItem('theme', isDark ? "dark" : "light");
                localStorage.removeItem('theme');
            });
        });
        //Triggers when the storage is changed in other tabs. Used to see if the theme has been updated
        $(window).on('storage', function (event) {
            // ignore other keys
            if (event.originalEvent.key!='theme') return;

            // ignore empty messages or messages reset
            var theme=event.originalEvent.newValue
            if (!theme) return;

            //Change Theme
            changeTheme(theme == "dark");
        });

