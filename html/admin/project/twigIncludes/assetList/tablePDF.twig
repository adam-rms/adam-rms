<table>
    <thead>
    <tr>
        {% if GET['checkboxes'] %}<th style="width:1px"></th>{% endif %}
        <th style="width:5em">Item</th>
        {% if GET['comments'] %}<th style="width:35em">{# Comment #}</th>{% endif %}
        <th style="width:25em">{# Spec #}</th>
        {% if GET['masses'] %}<th style="width:6em;">Mass</th>{% endif %}
        {% if project.projectsTypes_config_finance == 1 %}
            {% if GET['prices'] %}<th style="width:5em;">Price</th>{% endif %}
            {% if GET['discounts'] %}<th style="width:9em;">Discounted Price</th>{% endif %}
        {% endif %}
    </tr>
    </thead>
    <tbody>
        {% block tableBody %}{% endblock %}
    </tbody>
</table>
<style>
    .table td {
        vertical-align: top;
    }
</style>