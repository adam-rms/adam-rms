{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch AdamRMS with Debugger",
      "type": "php",
      "request": "launch",
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes",
        "-S",
        "localhost:8080"
      ],
      "program": "",
      "cwd": "${workspaceRoot}/html/admin/",
      "port": 9000,
      "serverReadyAction": {
        "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    },
  ]
}