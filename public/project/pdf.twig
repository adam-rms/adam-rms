<style>
    body {
        font-size: 12px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
    }

     table {
        width: 100%;
         border-collapse: collapse;
         font-size:inherit;
    }

     table td {
        vertical-align: top;
    }
     th {
         text-align: left;
     }
    th, td {
        padding-left: 5px;
        padding-right: 5px;
        padding-bottom: 1px;
        padding-top: 1px;
        font-size:inherit;
    }
    @media print {
        body{
            width: 21cm;
            height: 29.7cm;
        }
    }
    #firstPage {
        font-size: 21px;
    }
</style>
<title>Generated Document for Printing</title>
<body>
{% if GET['generate'] %}
    {# It's a PDF! #}
    <htmlpageheader name="firstpage" style="display:none">
    </htmlpageheader>
    <htmlpageheader name="otherpages" style="display:none">
        <table style="width: 100%">
            <tr>
                <td style="width: {{ GET['quote'] ? "33.333%" : "50%" }}"><b>{{ USERDATA['instance']['instances_name'] }}</b></td>
                {% if GET['quote'] %}<td width="33.333%" style="text-align: center;"><b>{{ "Quotation" }}</b></td>{% endif %}
                <td style="text-align: right; width: {{ GET['quote'] ? "33.333%" : "50%" }}">{% if project.projectsTypes_config_client == 1 and project['clients_name'] %}{{  project['clients_name'] }} - {% endif %}{{ project['projects_name'] }}</td>
            </tr>
        </table>
    </htmlpageheader>
    <sethtmlpageheader name="firstpage" value="on" show-this-page="1" />
    <sethtmlpageheader name="otherpages" value="on" />
{% else %}
    <script>
        window.onload = function () {
            window.print();
        }
    </script>
{% endif %}
<div id="firstPage">
    <div style="width: 100%;" align="center">
        {% if USERDATA.instance.instances_logo and GET['instancelogo'] %}
        <img src="{{ USERDATA.instance.instances_logo|s3URL("medium") }}" style="width: 200px; padding:20px;">
        {% endif %}
    </div>
    <table>
        <tr>
            <td>
                {% if project.projectsTypes_config_client == 1 %}
                    <b>{{ project.clients_name }}</b><br/>
                    {% if GET['addresses'] %}
                        {{ project.clients_address|nl2br }}<br/><br/>
                        {{ project.clients_website }}<br/>
                        {{ project.clients_email }}<br/>
                        {{ project.clients_phone }}<br/>
                    {% endif %}
                {% endif %}
            </td>
            <td style="text-align: right;">
                <b>{{ USERDATA['instance']['instances_name'] }}</b><br/>
                {% if GET['addresses'] %}
                    {{ USERDATA.instance.instances_address|nl2br }}<br/>
                    {{ USERDATA.instance.instances_website }}<br/>
                    {{ USERDATA.instance.instances_phone ? USERDATA.instance.instances_phone ~ "<br/>"}}
                    {{ USERDATA.instance.instances_email }}<br/><br/>
                {% endif %}
                {% if GET['pmdetails'] %}
                    <b>{{ project.users_name1 ~ " " ~ project.users_name2  }}</b><br/>
                    {{ project.users_email }}
                {% endif %}
                {% if fileNumber %}
                    <br/><br/>v{{ fileNumber }}
                {% else %}
                    <br/><br/><b>Draft Printout</b>
                {% endif %}
            </td>
        </tr>
    </table>
    <h1>{{ project.projects_name }}</h1>
    {% if GET['quote'] %}<h2>Quotation</h2>{% endif %}
    <table style="background-color: #F5F5F5;">
        <tr>
            <td style="padding: 8px;">
                <table>
                    <tr>
                        <td style="padding:0;">Our&nbsp;Reference:</td>
                        <td style="padding: 1px 0px 1px 5px;">{{project.projects_id}}</td>
                    </tr>
                    {% if project.projects_dates_deliver_start %}
                    <tr>
                        <td style="padding:0;">Deliver:</td>
                        <td style="padding: 1px 0px 1px 5px;">{{ project.projects_dates_deliver_start|date("j M Y h:ia")}}</td>
                    </tr>
                    {% endif %}
                    {% if project.projects_dates_use_start %}
                    <tr>
                        <td style="padding:0;">Start:</td>
                        <td style="padding: 1px 0px 1px 5px;">{{ project.projects_dates_use_start|date("j M Y h:ia")}}</td>
                    </tr>
                    {% endif %}
                    {% if project.projects_dates_use_end %}
                    <tr>
                        <td style="padding:0;">Finish:</td>
                        <td style="padding: 1px 0px 1px 5px;">{{ project.projects_dates_use_end|date("j M Y h:ia") }}</td>
                    </tr>
                    {% endif %}
                    {% if project.projects_dates_deliver_end %}
                    <tr>
                        <td style="padding:0;">Collect:</td>
                        <td style="padding: 1px 0px 1px 5px;">{{ project.projects_dates_deliver_end|date("j M Y h:ia") }}</td>
                    </tr>
                    {% endif %}
                    {% if GET['totalmass'] and project.projectsTypes_config_assets == 1 %}
                    <tr>
                        <td style="padding:0;">Mass Estimate:</td>
                        <td style="padding: 1px 0px 1px 5px;">{{FINANCIALS.mass|mass }}</td>
                    </tr>
                    {% endif %}
                    {% if GET['totalvalue'] and project.projectsTypes_config_assets == 1 %}
                    <tr>
                        <td style="padding:0;">Value Estimate:</td>
                        <td style="padding: 1px 0px 1px 5px;">{{FINANCIALS.value|money }}</td>
                    </tr>
                    {% endif %}
                </table>
            </td>
            {% if GET['venue'] and project.projectsTypes_config_venue == 1 %}
            <td style="text-align: right;padding: 8px;">
                <b>Venue</b><br/>
                {{ project.locations_name }}<br/>
                {{ project.locations_address|nl2br }}
            </td>
            {% endif %}
        </tr>
    </table>
    {% if GET['finance'] and 33|instancePermissions and project.projectsTypes_config_finance == 1 %}
    <hr/>
    <table>
        <tr>
           <td style="width: 35%;">
               Equipment SubTotal
           </td>
            <td style="width: 15%;text-align: right;">
                {{ FINANCIALS.prices.subTotal|money }}
            </td>
            <td style="width: 35%;">
                Sales
            </td>
            <td style="width: 15%;text-align: right;">
                {{ FINANCIALS.payments.sales.total|money }}
            </td>
        </tr>
        <tr>
            <td style="width: 35%;">
                {% if FINANCIALS.prices.discounts|moneyPositive %}Discounts{% else %}Adjustments{% endif %}
            </td>
            <td style="width: 15%;text-align: right;">
                {% if FINANCIALS.prices.discounts|moneyPositive %}&#8209;{{ FINANCIALS.prices.discounts|money }}{% else %}None{% endif %}
            </td>
            <td style="width: 35%;">
                Staffing
            </td>
            <td style="width: 15%;text-align: right;">
                {{ FINANCIALS.payments.staff.total|money }}
            </td>
        </tr>
        <tr>
            <td style="width: 35%;">
                <b>Equipment Total</b>
            </td>
            <td style="width: 15%;text-align: right;">
                {{ FINANCIALS.prices.total|money }}
            </td>
            <td  style="width: 35%;">
                Sub Hires
            </td>
            <td style="width: 15%;text-align: right;">
                {{ FINANCIALS.payments.subHire.total|money }}
            </td>
        </tr>
    </table>
    <hr/>
    <table>
        {% if not GET['quote'] %}
        <tr>
            <td style="width: 35%;">
                SubTotal
            </td>
            <td style="width: 15%;text-align: right;">
                {{ FINANCIALS.payments.subTotal|money }}
            </td>
            <td style="width: 35%;">
                Payments Received to Date
            </td>
            <td style="width: 15%;text-align: right;">
                &#8209;{{ FINANCIALS.payments.received.total|money }}
            </td>
        </tr>
        {% endif %}
        <tr>
            <td style="width: 35%;">

            </td>
            <td style="width: 15%;text-align: right;">

            </td>
            <td style="width: 35%;">
                <b>
                    {% if GET['quote'] %}
                        Grand Total
                    {% else %}
                        Grand Total Outstanding
                    {% endif %}
                </b>
            </td>
            <td style="width: 15%;text-align: right;">
                {{ FINANCIALS.payments.total|money }}
            </td>
        </tr>
    </table>
    {% endif %}
    {% if project.projects_invoiceNotes|length > 0 and GET['invoiceNotes'] %}
        <h2>Notes</h2>
        <p style="font-size: 16px;">{{ project.projects_invoiceNotes }}</p>
    {% endif %}
</div>
{% if GET['assets'] and project.projectsTypes_config_assets == 1 %}
    <p style="page-break-before: always"></p>
<h2>Equipment</h2>
{% if FINANCIALS.assetsAssigned|length > 0 %}
    {% embed 'project/twigIncludes/assetList/tablePDF.twig' with {"instanceid": USERDATA.instance.instances_id} %}
        {% block tableBody %}
            {% set currentCategory = "" %}
            {% for type in FINANCIALS.assetsAssigned %}
                {% if type['assets'][0].assetCategories_name != currentCategory %}
                    {% set currentCategory = type['assets'][0].assetCategories_name %}
                    {% set currentCategoryID = type['assets'][0].assetCategories_id %}
                    <tr style="background-color: #F5F5F5;">
                        <td colspan="999">
                            <i class="{{ type['assets'][0].assetCategories_fontAwesome }}" style="margin-right:10px;"></i>{{ type['assets'][0].assetCategories_name }}
                        </td>
                    </tr>
                {% endif %}
                {% embed 'project/twigIncludes/assetList/tableItemPDF.twig' with {"type": type,"all": FINANCIALS.assetsAssigned, "categoryid":currentCategoryID,"instanceid": USERDATA.instance.instances_id} %}{% endembed %}
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endif %}
{% if FINANCIALS.assetsAssignedSUB|length > 0 %}
    {% for instance in FINANCIALS.assetsAssignedSUB %}
        <h2>{{ instance['instance']['instances_name'] }} Equipment</h2>
        <div class="tab-pane fade" id="asset-list-tabs-instance{{ instance['instance'].instances_id }}" role="tabpanel" aria-labelledby="asset-list-tabs-messages-tab">
            {% embed 'project/twigIncludes/assetList/tablePDF.twig' with {"instanceid": instance['instance'].instances_id } %}
                {% block tableBody %}
                    {% set currentCategory = "" %}
                    {% for type in instance['assets'] %}
                        {% if type['assets'][0].assetCategories_name != currentCategory %}
                            {% set currentCategory = type['assets'][0].assetCategories_name %}
                            {% set currentCategoryID = type['assets'][0].assetCategories_id %}
                            <tr style="background-color: #F5F5F5;">
                                <td colspan="999">
                                    <i class="{{ type['assets'][0].assetCategories_fontAwesome }}" style="margin-right:10px;"></i>{{ type['assets'][0].assetCategories_name }}
                                </td>
                            </tr>
                        {% endif %}
                        {% embed 'project/twigIncludes/assetList/tableItemPDF.twig' with {"type": type,"all": instance, "categoryid":currentCategoryID,"instanceid": instance['instance'].instances_id} %}{% endembed %}
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        </div>
    {% endfor %}
{% endif %}

