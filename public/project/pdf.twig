                <td style="width: 10px;">{{ payment.payments_quantity > 1 ? payment.payments_quantity ~ "x" : "" }}</td>
                <td>{{ payment.payments_comment|nl2br }}</td>
                {% if GET['prices'] %}
                    <td style="width:100px;text-align: right;">{{ payment.payments_amount|money }}</td>
